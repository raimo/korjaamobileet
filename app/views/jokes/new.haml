%h1
  Tell A Joke
= form_for(@joke) do |f|
  - if @joke.errors.any?
    #error_explanation
      %ul
        - @joke.errors.each do |field, error|
          %li
            =field
            =error

  .field
    = f.text_area :body, :rows => 3, :cols => 100
  .clear
  .controls
    = f.submit('Send', :class => 'button half')
  .controls
    .button.cancel.half
      = link_to('Back', jokes_path)
