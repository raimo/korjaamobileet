
#joke-container
  .jokes-title
    %h1
      =@title="This joke was told#{@joke.teller.blank? ? '' : " by #{@joke.teller}"} on #{@joke.created_at.to_s(:short)}"
  .joke-body
    -@joke.body.split("\n").each do |line|
      %p
        =line
  .clear

.joke-item
  .image.vote-circle
  .double-line
    Vote for this joke
    = link_to('', @joke)

.clear

.comments
  -if @joke.comments.count == 0
    There are no comments so far.
  -else
    =link_to("There are #{@joke.comments.count} comments for this joke.", comments_path(@joke))
    

.controls
  .button.cancel
    = link_to 'Back', root_path

%script
  $(document).ready(function() { $('.joke-item').voteCircle({jokeContent : '.joke-body:first'}); });

