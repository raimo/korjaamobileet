      <!-- header begins -->
      <div id="header">
	<div id="buttons">
          <div class="but1"><%= link_to('Korjaamobileet', root_path) %></div>
          <div class="but2"><%= link_to('Uutiset', root_path(:anchor => 'news')) %></div>
