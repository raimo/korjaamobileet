      <div id="cont_out">
	<!-- content begins -->
	<div id="content">
	  <%= yield %>
	  <div style="clear: both"></div>
	</div>
      </div>
      <!-- content ends -->
      <!-- footer begins -->
      <div id="footer">
	Copyright 2010. Designed by <a href="http://www.metamorphozis.com/" title="Flash Templates">Flash Templates</a>
      </div>
      <!-- footer ends -->
    </div>
  </body>
</html>
